	<div class="form-group">
		<div class="row">
			<input type="text" class="form-control hidden" name="id" />		
			<div class="col-lg-6">
				<label>Nome</label> 
				<input type="text" class="form-control" name="nome" />
			</div>
			<div class="col-lg-6">
				<label>CPF</label>
				<input type="text" class="form-control" name="cpf"></input>
