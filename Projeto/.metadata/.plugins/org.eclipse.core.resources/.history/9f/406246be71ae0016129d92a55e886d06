package br.com.pyrafilms.dao;

public class JpaDaoFactory {

	public static JpaDaoFactory instance = new JpaDaoFactory();
	
	private CartaoDao cervejaDao;
	

	private JpaDaoFactory() {}
		
	public static JpaDaoFactory getInstance(){
		return instance;
	}
	
	
	public CartaoDao getCervejaDao(){
		if(this.cervejaDao == null)
			this.cervejaDao = new CartaoDao();
		return this.cervejaDao;
	}

}
