		function segueLinkUsuario(link) {
		   $.ajax({
		      url : host + link,
		      type : 'GET',
		      success : function(data) {
		         adicionaUsuarioNovoAoGrid(data.usuario);
		      },
		      error : function(data) {
		         alert("Ocorreu um erro");
		      }
		   });
		}
		
		function adicionaUsuarioNovoAoGrid(usuario) {

			 var data = "<tr onmouseover='verUsuario(\"" + usuario.nome + "\")' >"
